<%= form_with(model: task, local: true) do |f| %>
   <%= render "shared/error_messages"%>
   <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
   </p>
   <p>
      <%= f.label :content %><br/>
      <%= f.text_area :content, rows: 4 %>
   </p>
   <p>
      <%= f.label :deadline %><br/>
      <%= f.date_select :deadline %>
   <p>
   <p>
      <%= f.label :priority %><br/>
      <%= f.select :priority ,@options_priority %>
   </p>
   <p>
      <%= f.label :condition %><br/>
      <%= f.select :condition ,Task.conditions_i18n.values %>
   </p>

   <%= f.submit  %>
<% end %>
 <%= link_to "戻る", root_path %>