<%= form_with(model: task, local: true) do |f| %>
   <%= render "shared/error_messages"%>
   <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
   </p>
   <p>
      <%= f.label :content %><br/>
      <%= f.text_area :content, rows: 4 %>
   </p>
   <%= f.submit  "タスクを作成する" %>
<% end %>