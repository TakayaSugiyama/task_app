<%= form_with(model: task, local: true) do |f| %>
   <%= render "shared/error_messages"%>
   <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
   </p>
   <p>
      <%= f.label :content %><br/>
      <%= f.text_area :content, rows: 4 %>
   </p>
   <p>
      <%= f.label :deadline %><br/>
      <%= f.date_select :deadline %>
   <p>
   <p>
      <%= f.label :status %><br/>
      <%= f.select :status ,@options %>
   </p>
   <%= f.submit  %>
<% end %>
